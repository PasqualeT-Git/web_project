<div class="content-navbar">
  <%= link_to root_path do %>
    <div class="navbar-section__brand">
      <%= image_tag 'logo.svg', class: "navbar-logo" %>
      <p>home</p>
    </div>
    <div class="navbar-section__logosymbol">
      <%= image_tag 'logosymbol-short.svg' %>
    </div>
  <% end %>
  <div class="navbar-section__options">
    <%= link_to new_customer_path do %>
      <div class="navbar-selector">
        <%= image_tag 'icon-mail.svg', class: "navbar-selector__img" %>
        <p>Contact us</p>
      </div>
    <% end %>
    <%= link_to about_path do %>
      <div class="navbar-selector">
        <%= image_tag 'icon-about_us.svg', class: "navbar-selector__img" %>
        <p>About us</p>
      </div>
    <% end %>
    <% if current_user %>
      <%= link_to rails_admin_path do %>
        <div class="navbar-selector navbar-admin">
          <i class="fas fa-users-cog"></i>
          <p>admin</p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<script>
  ScrollReveal().reveal('.content-navbar',
                        { delay: 800 },
                        { duration: 800 });
</script>
