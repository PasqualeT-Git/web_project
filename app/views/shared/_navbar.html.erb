<div class="content-navbar">
  <%= link_to root_path, id: "navbar-home__link" do %>
    <div class="navbar-section__brand">
      <%= image_tag 'logo.svg', class: "navbar-selector__img" %>
      <p>home</p>
    </div>
    <div class="navbar-section__logosymbol">
      <%= image_tag 'logosymbol-short.svg' %>
    </div>
  <% end %>
  <div class="navbar-section__options">
    <% if request.env['PATH_INFO'] == '/about' %>
      <%= link_to services_path, class: "text-decoration-none" do %>
        <div class="navbar-selector" id="services-icon">
          <%= image_tag 'icon-services.svg', class: "navbar-selector__img", style: "opacity: 75%;" %>
          <p>services</p>
        </div>
      <% end %>
      <%= link_to new_customer_path, class: "text-decoration-none" do %>
        <div class="navbar-selector">
          <%= image_tag 'icon-mail.svg', class: "navbar-selector__img", style: "opacity: 75%;" %>
          <p>contact us</p>
        </div>
      <% end %>
      <%= link_to about_path, class: "text-decoration-none" do %>
        <div class="navbar-selector">
          <%= image_tag 'icon-about_us.svg', class: "navbar-selector__img" %>
          <p>about us</p>
        </div>
      <% end %>
    <% elsif request.env['PATH_INFO'] == '/customers/new' %>
