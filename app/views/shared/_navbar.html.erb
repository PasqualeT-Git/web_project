        <div class="navbar-selector">
          <%= image_tag 'icon-about_us.svg', class: "navbar-selector__img", style: "opacity: 75%;" %>
          <p>about us</p>
        </div>
      <% end %>
    <% elsif request.env['PATH_INFO'] == '/services' %>
      <%= link_to services_path, class: "text-decoration-none" do %>
        <div class="navbar-selector" id="services-icon">
          <%= image_tag 'icon-services.svg', class: "navbar-selector__img" %>
          <p>services</p>
        </div>
      <% end %>
      <%= link_to new_customer_path, class: "text-decoration-none" do %>
        <div class="navbar-selector">
          <%= image_tag 'icon-mail.svg', class: "navbar-selector__img", style: "opacity: 75%;" %>
          <p>contact us</p>
        </div>
      <% end %>
      <%= link_to about_path, class: "text-decoration-none" do %>
        <div class="navbar-selector">
          <%= image_tag 'icon-about_us.svg', class: "navbar-selector__img", style: "opacity: 75%;" %>
          <p>about us</p>
        </div>
      <% end %>
    <% else %>
      <%= link_to services_path, class: "text-decoration-none" do %>
        <div class="navbar-selector" id="services-icon">
          <%= image_tag 'icon-services.svg', class: "navbar-selector__img" %>
          <p>services</p>
        </div>
      <% end %>
      <%= link_to new_customer_path, class: "text-decoration-none" do %>
        <div class="navbar-selector">
          <%= image_tag 'icon-mail.svg', class: "navbar-selector__img" %>
          <p>contact us</p>
        </div>
      <% end %>
